# Auto detect text files and perform LF normalization
* text=auto

# Shell scripts should always use LF line endings (for Docker on Windows)
*.sh text eol=lf

# Python files should use LF line endings
*.py text eol=lf

# Configuration files should use LF line endings
*.yml text eol=lf
*.yaml text eol=lf
*.conf text eol=lf
*.ini text eol=lf
*.toml text eol=lf
*.json text eol=lf

# Django files
*.html text eol=lf
*.css text eol=lf
*.js text eol=lf
*.txt text eol=lf
*.md text eol=lf

# Environment files
.env* text eol=lf

# Dockerfile
Dockerfile text eol=lf
docker-compose*.yml text eol=lf

# Ensure Windows batch files use CRLF
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.ttf binary
*.woff binary
*.woff2 binary
*.eot binary
*.otf binary
